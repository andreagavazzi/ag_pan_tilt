<launch>

<arg name="model" default="$(find ag_pan_tilt)/urdf/turret.urdf"/>
<arg name="rvizconfig" default="$(find ag_pan_tilt)/urdf/turret.rviz" />

<param name="robot_description" textfile="$(find ag_pan_tilt)/urdf/turret.urdf" />
<node name="joint_state_publisher_gui" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui" />

<node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
<node name="rviz" pkg="rviz" type="rviz" args="-d $(find ag_pan_tilt)/urdf/turret.rviz" required="true" />
</launch>
